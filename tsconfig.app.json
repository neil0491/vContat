{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "strict": true,
    "composite": true,
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "isolatedModules": false,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": ".",
    "rootDirs": ["."],
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "@/composables": ["./src/composables/*"],
      "@/components": ["./src/components/*"],
      "~/*": ["./*"]
    }
  },
  "exclude": ["node_modules", "src/**/__tests__/*"]
}
